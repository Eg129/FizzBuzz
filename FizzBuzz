// FizzBuzz.cpp : Этот файл содержит функцию "main". Здесь начинается и заканчивается выполнение программы.
/*
Напишите приложение, которое печатает на экран числа от 1 до 100.
При этом вместо чисел, кратных трем, программа должна выводить слово Fizz, а вместо чисел, кратных пяти — слово Buzz.
Если число кратно пятнадцати, то программа должна выводить слово FizzBuzz*/

#include <iostream>

using namespace std; 
int main()
{
    int i;
    for (i = 1;i < 101;i++) // цикл 
    {
        if (i % 15 == 0) // число кратное 15 заменяется на FizzBuzz
        {

            cout << "FizzBuzz,";

        }
        else
        if (i % 3 == 0) // число кратное 3 на Fizz
        {
          
            cout << "Fizz,";

        }
        else 
        if (i % 5 == 0) // число кратное 5 на Buzz
        {

          cout << "Buzz,";

        } 
        else
        cout << i << ", ";
    }
} 
